# SkyFi MCP Server Configuration
# Copy this file to .env and update with your values

# Required: SkyFi API Configuration
SKYFI_API_KEY=your-skyfi-api-key-here
SKYFI_API_URL=https://app.skyfi.com/platform-api

# Optional: Weather Integration
WEATHER_API_KEY=your-openweathermap-api-key

# Cost Controls
SKYFI_COST_LIMIT=40.0
SKYFI_FORCE_LOWEST_COST=true
SKYFI_ENABLE_ORDERING=false
SKYFI_REQUIRE_CONFIRMATION=true
SKYFI_REQUIRE_HUMAN_APPROVAL=true

# Logging
MCP_LOG_LEVEL=INFO
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Multi-user Configuration (optional)
SKYFI_MULTI_USER=false
REDIS_URL=redis://localhost:6379

# Advanced Configuration (optional)
SKYFI_TIMEOUT=30
SKYFI_MAX_RETRIES=3
SKYFI_RATE_LIMIT=100
SKYFI_CACHE_TTL=3600

# Docker Configuration (optional)
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=60

# Development Settings
DEBUG=false
TESTING=false